<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:padding="1dp">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="65dp"
        android:layout_marginLeft="65dp"

        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/request_access_background"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="30dp">


            <TextView
                android:id="@+id/requestAccessMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="@string/request_access"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/requestAccessInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="@string/request_access"
                android:textSize="13dp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/permissionGrant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grant"/>

            <Button
                android:id="@+id/permissionDenied"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Denied" />

            <TextView
                android:id="@+id/senderCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:textSize="0.2dp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>

