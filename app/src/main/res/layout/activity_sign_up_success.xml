<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    android:padding="1dp"
    tools:context=".SignUpSuccess">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">

            <TextView
                android:text="@string/take_screenshot"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/success_lastname"
                android:textSize="15dp"

                android:gravity="left"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/success_firstname"
                android:textSize="15dp"

                android:gravity="left"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                />

            <TextView
                android:id="@+id/success_username"
                android:textSize="15dp"

                android:gravity="left"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                />

            <TextView
                android:id="@+id/success_password"
                android:textSize="15dp"

                android:gravity="left"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                />

            <TextView
                android:id="@+id/success_school_id"
                android:textSize="15dp"

                android:gravity="left"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                />

            <TextView
                android:id="@+id/success_user_type"
                android:textSize="15dp"

                android:gravity="left"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                />

            <TextView
                android:id="@+id/success_user_sex"
                android:textSize="15dp"

                android:gravity="left"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                />


            <TextView
                android:id="@+id/success_selected_grade"
                android:textSize="15dp"

                android:gravity="left"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                />

            <TextView
                android:id="@+id/success_lrn"
                android:textSize="15dp"

                android:gravity="left"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                />

            <TextView
                android:id="@+id/success_birthday"
                android:textSize="15dp"

                android:gravity="left"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                />



            <Button
                android:id="@+id/success_proceed_to_logIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proceed to Log-in"
                />



        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>

